@model BanHang.ViewModel.AccountViewModel.RegisterViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal" data-ajax="true" data-ajax-success="RegisterSuccess">
    <div class="form-group">
        <label asp-for="CustomerEmail" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerEmail" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CustomerFullname" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerFullname" class="form-control" />
            <span asp-validation-for="CustomerFullname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CustomerAddress" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <textarea asp-for="CustomerAddress" class="form-control" ></textarea>
            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CustomerPhone" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerPhone" class="form-control" />
            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CustomerPassword" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerPassword" class="form-control" />
            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button class="btn btn-block btn-warning">Đăng ký</button>
        </div>
    </div>
</form>
