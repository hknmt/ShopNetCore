@model BanHang.ViewModel.CartViewModel.OtherInformationViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-controller="Cart" asp-action="CheckOut" method="post" class="form-horizontal" data-ajax="true" data-ajax-success="UpdateSuccess">
    <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
    <div class="form-group row">
        <label asp-for="CustomerFullname" class="col-lg-4 control-label visible-lg-block"></label>
        <div class="col-lg-8">
            <input asp-for="CustomerFullname" class="form-control address" />
            <span asp-validation-for="CustomerFullname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CustomerPhone" class="col-lg-4 control-label visible-lg-block"></label>
        <div class="col-lg-8">
            <input asp-for="CustomerPhone" class="form-control address" />
            <span asp-validation-for="CustomerPhone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CustomerAddress" class="col-lg-4 control-label visible-lg-block">Địa chỉ</label>
        <div class="col-lg-8">
            <textarea asp-for="CustomerAddress" class="form-control address"></textarea>
            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-offset-4 col-lg-8">
            <button type="button" class="btn btn-default btn-custom2 visible-lg-inline-block js-hide">Hủy bỏ</button>
            <button type="submit" class="btn btn-primary btn-custom3">Cập nhật</button>
        </div>
    </div>
    <script>
        var UpdateSuccess = function (response) {
            if (response["success"]) {
                location.href = '/Home/Index';

            }
        };
    </script>
</form>
