@model BanHang.ViewModel.AccountViewModel.LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" data-ajax="true" data-ajax-update="#login-form" data-ajax-success="LoginSuccess">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CustomerEmail" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerEmail" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CustomerPassword" class="control-label col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="CustomerPassword" class="form-control" />
            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <button class="btn btn-block btn-primary">Đăng nhập</button>
        </div>
    </div>
</form>